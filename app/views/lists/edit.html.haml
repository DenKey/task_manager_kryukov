.panel.panel-primary
  .panel-heading
    Edit list
  .panel-body
    = bootstrap_form_for(@list) do |f|
      - if @list.errors.any?
        #error_explanation
          %h2
            = pluralize(@list.errors.count, "error")
            prohibited this list from being saved:
          %ul
            - @list.errors.full_messages.each do |message|
              %li
                = message

      .block-center
        = hidden_field(:user, :id)
        %input{:type => "hidden", :id => "list[user_id]",:name => "list[user_id]", :value => "#{current_user.id}"}
        = f.text_field :title
        = f.text_area :description
        = f.primary "Update TODO list"
