= form_for(@list) do |f|
  - if @list.errors.any?
    #error_explanation
      %h2
        = pluralize(@list.errors.count, "error")
        prohibited this list from being saved:
      %ul
        - @list.errors.full_messages.each do |message|
          %li
            = message

  .field
    = hidden_field(:user, :id)
    %input{:type => "hidden", :id => "list[user_id]",:name => "list[user_id]", :value => "#{current_user.id}"}
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit
